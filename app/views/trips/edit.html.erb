<% content_for(:title) do %>
  Modifier mon trajet
<% end %>


<h4 class = 'text-center'>Je modifie mon voyage</h4>

<div class="container">
<%= simple_form_for(@trip) do |f| %>
  <%= f.input :starts_at %>
  <%= f.input :ends_at %>
  <%= f.input :departure_city %>
  <%= f.input :arrival_city %>
  <%= f.submit 'Modifier' %>
<% end %>
</div>
