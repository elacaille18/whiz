<div class="card-trip">
  <div class="train-infos">
    <div class="departure-segment">
      <div class="trip-times">
        <%= trip.starts_at.strftime(" %H:%M") %>
      </div>
      <div class="city">
        <%= trip.departure_city %>
      </div>
    </div>

    <div class="arrival-segment">
      <div class="trip-times">
        <%= trip.ends_at.strftime(" %H:%M") %>
      </div>
      <div class="city">
        <%= trip.arrival_city%>
      </div>
    </div>

  </div>
  <!-- Infos user -->
  <div class="carrier-face">
    <%= link_to show_user_card_path(trip.user), remote: true do%>
      <%= image_tag "http://placehold.it/50x50", class: "avatar-large"%>
    <%end%>
  </div>

  <div class="carrier-infos">

    <div class="carrier-name">
      <%= trip.user.email%>
    </div>
    <div class="carrier-rating">
      <% 4.times do %>
        <i class="fa fa-star" aria-hidden"=true" style="color: #FFB400;"></i>
      <%end%>
      <% 1.times do %>
      <i class="fa fa-star" aria-hidden"=true" style="color: $grey;"></i>
      <%end%>
    </div>


  </div>

  <div class="button-choose hidden">
    <%= link_to mission_update_mission_with_trip_path(@mission, trip_id: trip.id), {:method => :put} do %>
      <i class="fa fa-check" aria-hidden="true"></i>
    <%end%>
  </div>
</div>
