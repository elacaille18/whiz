<div class="card-trip" data-trip_user_id="<%= trip.user_id %>">
  <div class="train-infos">
    <div class="departure-segment">
      <div class="trip-times">
        <%= trip.starts_at.strftime(" %H:%M") %>
      </div>
      <div class="city">
        <%= trip.departure_city %>
      </div>
    </div>

    <div class="arrival-segment">
      <div class="trip-times">
        <%= trip.ends_at.strftime(" %H:%M") %>
      </div>
      <div class="city">
        <%= trip.arrival_city%>
      </div>
    </div>

  </div>
  <!-- Infos user -->
  <div class="carrier-face">
    <%= link_to show_user_card_path(trip.user), remote: true do%>
      <%= image_tag trip.user.one_picture_url, class: "avatar-large"%>
    <%end%>
  </div>

  <div class="carrier-infos">

    <div class="carrier-name">
      <%= trip.user.first_name%>
    </div>
    <div class="carrier-rating">
      <% if trip.user.average_transporter_rating %>
        <% trip.user.average_transporter_rating.times do %>
          <i class="fa fa-star" aria-hidden"=true" style="color: #FFB400;"></i>
        <%end%>
        <% (5 - trip.user.average_transporter_rating).times do %>
        <i class="fa fa-star" aria-hidden"=true" style="color: $grey;"></i>
        <%end%>
      <%else%>
        <p><span style="font-style:italic;"> Pas encore not√©. Whiz lui fait confiance.</span></p>
      <%end%>
    </div>


  </div>

  <div class="button-choose hidden">
    <%= link_to mission_update_mission_with_trip_path(@mission, trip_id: trip.id), {:method => :put} do %>
      <i class="fa fa-check" aria-hidden="true"></i>
    <%end%>
  </div>
  <div class="arrow hidden">
    <div class="white-triangle"></div>
  </div>
</div>
