<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="login-form">
        <div class="text-center">
          <h2>S'inscrire</h2>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <div class="row">

            <div class="col-md-6">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user fa-fw" aria-hidden="true"></i></div>
                <%= f.input :first_name, label:false, required: true, autofocus: true, input_html: { placeholder: "Votre prÃ©nom" } %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user fa-fw" aria-hidden="true"></i></div>
                <%= f.input :last_name, label:false, required: true, input_html: { placeholder: "Votre nom de famille" }%>
              </div>
            </div>

            <div class="col-md-12">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></div>
                <%= f.input :email, label:false, required: false, input_html: { placeholder: "Votre E-mail" }%>
              </div>
            </div>

            <div class="col-md-12">
              <div class="form-inputs">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></div>
                  <%= f.input :password, label:false, required: true, input_html: { placeholder: "Votre mot de passe (6 caractÃ¨res minimum)" } %>
                </div>
              </div>
            </div>

            <div class="col-md-12">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></div>
                  <%= f.input :password_confirmation, label:false, required: true, input_html: { placeholder: "Confirmez votre otre mot de passe" } %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="input-group">
              <%= f.button :submit, "S'inscrire", :class => "btn-primary" %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="input-group">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

