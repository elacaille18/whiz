
<%= simple_form_for(user, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :photo, label: "Photo", hint: "Montrer une photo de vous est un moyen important pour les utilisateurs de vous reconnaître. Téléchargez une photo qui montre clairement votre visage." %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :description, hint: "Whiz est basé sur une relation de confiance entre utilisateurs. Dites-leurs en plus à propos de vous...", required: false %>
    <%= f.input :city, label: "Ville", hint: "Où habitez-vous ?", required: false, placeholder: "ex: Paris, Lyon, Bordeaux..." %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Modifier vos informations", class: "btn btn-primary" %>
  </div>
<% end %>
<br>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
