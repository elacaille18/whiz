<div class="dashboard">
  <div class="container">
    <div class="dashboard-header">
      <div class="row">
        <div class="col-md-1 text-center">
          <p> Date </p>
        </div>
        <div class="col-md-1 text-center">
          <p> Timeslot </p>
        </div>
        <div class="col-md-1 text-center">
          <p> Ville de Départ </p>
        </div>
        <div class="col-md-1 text-center">
          <p> Ville de d'arrivée</p>
        </div>
        <div class="col-md-2 text-center">
          <p> Description du colis</p>
        </div>
        <div class="col-md-2 text-center">
          <p> Etat </p>
        </div>
        <div class="col-md-2 text-center">
          <p> Receiver </p>
        </div>
        <div class="col-md-2 text-center">
          <p> Mes actions </p>
        </div>
      </div>
    </div>
    <div class="dashboard-content">
      <% @missions.each do |mission| %>
        <div class="row dashboard-row">

          <div class="col-md-1 text-center">
            <p> <%= mission.starts_on %> </p>
          </div>

          <div class="col-md-1 text-center">
          <p> <%= mission.timeslot %> </p>
          </div>

          <div class="col-md-1 text-center">
            <p> <%= mission.departure_city %>  </p>
          </div>

          <div class="col-md-1 text-center">
            <p> <%= mission.arrival_city %>  </p>
          </div>

          <div class="col-md-2 text-center">
            <p> <%= mission.parcel_description %> </p>
          </div>

          <div class="col-md-2 text-center">
          <p> Etat en cours</p>
          </div>

          <div class="col-md-2 text-center">
          <p> <%= mission.receiver_last_name %></p>
          </div>

          <div class="col-md-2 text-center">
            <ul class="list-inline text-center">
            <li> <%= link_to 'Modifier', edit_mission_path(mission), class:"btn btn-primary" %> </li>
            <li> <%= link_to " X ", mission_path(mission),
              method: :delete,
              class:"btn btn-warning",
              data: { confirm: "Etes-vous sure?" } %>
            </li>
            </ul>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
