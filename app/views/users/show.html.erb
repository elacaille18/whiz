<div class="container padded">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="row">
        <div class="col-xs-3 text-center">
          <%= cl_image_tag @user.picture, class: "avatar-square"%>
        </div>
        <div class="col-xs-7">
          <h1><%= @user.description %></h1>
          <p><%= @user.city %> . Membre depuis le <%= @user.created_at.strftime("%d / %m / %Y") %></p>
          <%= link_to "Moifier mon profile", profile_path%>
        </div>
      </div>
    </div>
</div>
<div class="container">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="row">
        <div class="col-xs-3">
          <table class="table">
            <thead class="thead-inverse">
              <tr>
                <th>Informations</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Email: <%= @user.email %></td>
              </tr>
              <tr>
                <td>Tel.: <%= @user.phone %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-7">
          <h1>Reviews (2)</h1>
          <p>Le mec est solide</p>
          <p>Le mec est top</p>
        </div>
      </div>
    </div>
</div>

