<div class="container padded">
    <div class="col-xs-12">
      <div class="row">

        <div class="col-xs-3 text-center">
          <%= cl_image_tag @user.one_picture_url, class: "avatar-square"%>
        </div>
        <div class="col-xs-8">
          <h1><%= @user.description %></h1>
          <p><%= @user.city %> . Membre depuis le <%= @user.created_at.strftime("%d / %m / %Y") %></p>
          <%= link_to "Moifier mon profile", profile_path%>
        </div>
      </div>
    </div>
</div>
<div class="container">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-3">
          <table class="table">
            <thead class="thead-inverse">
              <tr>
                <th>Informations</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Email: <%= @user.email %></td>
              </tr>
              <tr>
                <td>Tel.: <%= @user.phone %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-9">
          <h2>Reviews</h2>
          <% @reviews.each do |review| %>
            <div class="commentaire">
              <div class="row">

                <div class="col-md-1">
                  <%= cl_image_tag review.mission.trip.user.picture, crop: :fit, width: 100, height: 100, class: "img-responsive"%>
                </div>

                <div class="col-md-1">
                  <p> <%= review.user.first_name.capitalize %> </p>
                </div>

                <div class="col-md-6">
                  <p> <%= review.content %> </p>
                </div>

                <div class="col-md-2">
                <p>
                  <% review.rating.times do %>
                    <i class="fa fa-star" aria-hidden"=true" style="color: #FBE70C;"></i>
                  <%end%>
                  <% (5 - review.rating).times do %>
                    <i class="fa fa-star" aria-hidden"=true" style="color: $grey;"></i>
                  <%end%>
                </p>
                </div>

                <div class="col-md-2">
                  <p> <%= review.created_at.to_s[0..9] %> </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>

